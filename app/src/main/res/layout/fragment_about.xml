<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.AboutFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/willy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_title" />

        <TextView
            android:id="@+id/about_title"
            android:layout_width="202dp"
            android:layout_height="117dp"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/freehand"
            android:text="@string/app_name"
            android:textColor="?attr/colorControlNormal"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/about_github"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="52dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/github"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageButton
            android:id="@+id/about_myket"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="52dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/myket"
            app:layout_constraintEnd_toStartOf="@+id/about_mail"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toEndOf="@+id/about_github"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageButton
            android:id="@+id/about_mail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="52dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/mail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Github"
            app:layout_constraintEnd_toEndOf="@+id/about_github"
            app:layout_constraintStart_toStartOf="@+id/about_github"
            app:layout_constraintTop_toBottomOf="@+id/about_github" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="42dp"
            android:layout_height="16dp"
            android:layout_marginTop="28dp"
            android:text="Myket"
            app:layout_constraintEnd_toEndOf="@+id/about_myket"
            app:layout_constraintStart_toStartOf="@+id/about_myket"
            app:layout_constraintTop_toBottomOf="@+id/about_myket" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Email"
            app:layout_constraintEnd_toEndOf="@+id/about_mail"
            app:layout_constraintStart_toStartOf="@+id/about_mail"
            app:layout_constraintTop_toBottomOf="@+id/about_mail" />

        <ImageButton
            android:id="@+id/about_pinterest"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="44dp"
            android:background="#00000000"
            android:src="@drawable/pinterest_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/about_pinterest"
            app:layout_constraintStart_toStartOf="@+id/about_pinterest"
            app:layout_constraintTop_toTopOf="@+id/about_pinterest" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>